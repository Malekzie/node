generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(cuid())
  email       String        @unique
  password    String
  theme       String        @default("luxury")
  UserProfile UserProfile[]
  Spells      SpellBook[]
}

model UserProfile {
  id        String  @id @default(cuid())
  firstName String?
  lastName  String?
  address   String?
  phone     String?
  city      String?
  province  String?
  postal    String?
  userId    String
  user      User   @relation(fields: [userId], references: [id])
}

model Agents {
  id        String      @id @default(cuid())
  image     String?
  name      String
  position  String
  email     String
  phone     String
  address   String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  Spells    SpellBook[]
}

model SpellBook {
  id          Int     @id @default(autoincrement())
  image       String?
  author      String
  title       String
  description String
  powerLevel  Int
  element     String

  // Relationships
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String?
  agentId   String?
  agents    Agents?  @relation(fields: [agentId], references: [id])
  users     User?    @relation(fields: [userId], references: [id])
}

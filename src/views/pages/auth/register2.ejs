<!-- Mobile View -->
<div class="mx-[10vw] h-full mt-[10vh] mb-20 md:hidden">
	<div class="text-center">
		<h1 class="text-2xl subpixel-antialiased font-bold"
			>Nice to Meet you!</h1
		>
		<h1 class="text-xs subpixel-antialiased"
			>Enter your details to get started</h1
		>
	</div>

	<form action="/auth/register2" method="post">
		<div class="flex flex-col gap-4">
               <div class="form-control">
                    <label class="label">
                         <span class="label-text">First Name</span>
                    </label>
                    <input
                         type="text"
                         placeholder="John"
                         name="firstName"
                         class="input input-bordered"
                         required />
               </div>
               <div class="form-control">
                    <label class="label">
                         <span class="label-text">Last Name</span>
                    </label>
                    <input
                         type="text"
                         placeholder="Smith"
                         name="lastName"
                         class="input input-bordered"
                         required />
               </div>
               <div class="form-control">
                    <label class="label">
                         <span class="label-text">Address</span>
                    </label>
                    <input
                         type="text"
                         placeholder="123 Main St."
                         name="address"
                         class="input input-bordered"
                         required />
               </div>
               <div class="form-control">
                    <label class="label">
                         <span class="label-text">City</span>
                    </label>
                    <input
                         type="text"
                         placeholder="Calgary"
                         name="city"
                         class="input input-bordered"
                         required />
                    <label class="label">
                         <span class="label-text">Province</span>
                    </label>
                    <select name="province" class="w-full max-w-xs select select-bordered">
                         <% provinces.forEach(province => { %>)
                              <option value="<%= province %>"><%= province %></option>
                         <% }) %>
                       </select>
                    <label class="label">
                         <a
                              href="#"
                              class="label-text-alt link link-hover"
                              >Forgot password?</a
                         >
                    </label>
               </div>
			<button class="btn" type="submit">Register</button>
		</div>
	</form>
</div>

